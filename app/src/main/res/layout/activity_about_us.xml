<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".AboutUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <!-- About Us Section -->
                <TextView
                    android:id="@+id/about_us_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Teladoc"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Teladoc - Your Trusted Telemedicine App."
                    android:textSize="16sp"
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="At Teladoc, our mission is to provide accessible, affordable, and high-quality healthcare to everyone. We understand the importance of timely medical consultations, and we're dedicated to connecting patients with certified healthcare professionals from the comfort of their homes."
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Whether it's a routine check-up, a prescription refill, or a medical concern that requires immediate attention, Teladoc is here for you. We prioritize your health and well-being."
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thank you for choosing Teladoc as your telemedicine provider. We look forward to serving your healthcare needs and ensuring a healthier, happier you."
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="16dp"/>

                <!-- Terms of Use Section -->
                <TextView
                    android:id="@+id/terms_of_use_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms of Use"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please read and agree to our Terms of Use before using Teladoc."
                    android:textSize="16sp"
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Acceptance of Terms"
                    android:textStyle="bold"
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By using Teladoc, you agree to abide by these Terms of Use, as well as any other policies and guidelines set forth by our platform. If you do not agree with these terms, please do not use our services."
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Privacy and Security"
                    android:textStyle="bold"
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your privacy and data security are of utmost importance to us. We have strict privacy policies in place to protect your personal information and medical records."
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Use of Service"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You can use the Teladoc service for various healthcare needs, including but not limited to:"
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - Medical consultations with certified healthcare professionals."
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - Routine check-ups and preventive care."
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - Prescription refills and medication management."
                    android:textColor="@color/skyblue"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="16dp"/>

                <!-- Add more terms of use content here -->
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/pink"
        android:layout_gravity = "start"/>

</androidx.drawerlayout.widget.DrawerLayout>